{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Gizmo.Client.UI.Host.Web Console",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build web app",
          "program": "${workspaceFolder}/Gizmo.Client.UI.Host.Web/bin/Debug/net6.0/Gizmo.Client.UI.Host.Web.dll",
          "args": [],
          "cwd": "${workspaceFolder}/Gizmo.Client.UI.Host.Web",
          "stopAtEntry": false,
          "internalConsoleOptions": "openOnSessionStart",
          "launchBrowser": {
            "enabled": true,
            "args": "${auto-detect-url}",
            "windows": {
              "command": "cmd.exe",
              "args": "/C start ${auto-detect-url}"
            },
            "osx": {
              "command": "open"
            },
            "linux": {
              "command": "xdg-open"
            }
          },
          "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
          },
