<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows10.0.19041</TargetFramework>
		<UseWPF>true</UseWPF>
		<!--Fixes duplicate file error on publish (.NET6 BUG)-->
		<ErrorOnDuplicatePublishOutputFiles>false</ErrorOnDuplicatePublishOutputFiles>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebView.Wpf" Version="6.0.100-preview.6.1003" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="wwwroot\index.html">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Gizmo.Client.UI\Gizmo.Client.UI.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="wwwroot\Index.html">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<Folder Include="wwwroot\css\" />
		<Folder Include="wwwroot\img\" />
		<Folder Include="wwwroot\scss\" />
	</ItemGroup>

	<PropertyGroup>
		<PostBuildEvent>
			<!--copy client ui web assets-->
			xcopy "$(SolutionDir)\Gizmo.Client.UI\wwwroot\" "$(TargetDir)wwwroot\_content\Gizmo.Client.UI\" /e /y
			<!--copy shared components web assets-->
			xcopy "$(SolutionDir)..\Gizmo.Web.Components\wwwroot\" "$(TargetDir)wwwroot\_content\Gizmo.Web.Components\" /e /y
		</PostBuildEvent>
	</PropertyGroup>

</Project>
