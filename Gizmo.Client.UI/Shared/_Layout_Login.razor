            </button>
            <!--sub dropdown content-->
            <ul class="giz-sub-dropdown">
                <li class="giz-sub-dropdown--item">
                    <a href="#" class="giz-sub-dropdown--link">
                        <img src="https://i.postimg.cc/cLXq1dgt/Flag-2.png" class="giz-flag-icon" alt="loading">
                        English
                    </a>
                </li>
                <li class="giz-sub-dropdown--item">
                    <a href="#" class="giz-sub-dropdown--link">
                        <img src="https://i.postimg.cc/tJTn8DqT/Flag-7.png" class="giz-flag-icon" alt="loading">
                        Italian
                    </a>
                </li>
                <li class="giz-sub-dropdown--item">
                    <a href="#" class="giz-sub-dropdown--link">
                        <img src="https://i.postimg.cc/y8FCCHrJ/Flag-8.png" class="giz-flag-icon" alt="loading">
                        German
                    </a>
                </li>
                <li class="giz-sub-dropdown--item">
                    <a href="#" class="giz-sub-dropdown--link">
                        <img src="https://i.postimg.cc/YCxnN8M5/Flag-1.png" class="giz-flag-icon" alt="loading">
                        Greek
                    </a>
                </li>
            </ul>
            <!---/sub dropdown content-->
        </div>
        <!--version-->
        <div class="giz-server">
            <div class="giz-server--icon">
                <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.9462 1.61523H2.43846C1.64402 1.61523 1 2.25926 1 3.0537V5.93062C1 6.72506 1.64402 7.36908 2.43846 7.36908H13.9462C14.7406 7.36908 15.3846 6.72506 15.3846 5.93062V3.0537C15.3846 2.25926 14.7406 1.61523 13.9462 1.61523Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
