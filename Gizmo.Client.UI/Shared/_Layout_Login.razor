                    <path d="M3.87695 13.1229H3.88382" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <span class="giz-server--status"></span>
            </div>
            <div class="giz-version">
                <div class="giz-version--title">
                    version
                </div>
                <div class="giz-version--info">2.457.002A</div>
            </div>
        </div>
        <!--version-->
        <!--message-->
        <div class="giz-alert-message mr-7 d-none">
            Computer is reserved
            from 14:00 to 20:00
        </div>
        <div class="giz-warning-message d-none mr-7">
            Login is unavailable
            Computer is reserved
        </div>
        <div class="giz-disable-message d-none mr-7">
            Mouse and keyboard
            is currently locked
        </div>
        <!--/message-->
    </div>
