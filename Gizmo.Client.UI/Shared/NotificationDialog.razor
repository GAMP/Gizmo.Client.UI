@namespace Gizmo.Client.UI.Shared
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="giz-notification-dialog">
    <div class="giz-notification-card">
        <div class="giz-notification-card__header">
            <div class="giz-heading-text">
                heads up
            </div>
            <IconButton SVGIcon="Icons.Close" Variant="ButtonVariants.Text" Size="ButtonSizes.Small" Class="close-btn" @onclick="@(() => CloseDialog())" />
        </div>
        <div class="giz-notification-card__title">
            @Notification?.Title
        </div>
        <div class="giz-notification-card__text">
            @Notification?.Message
        </div>
    </div>
</div>
