@namespace Gizmo.Client.UI.Shared
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="giz-active-app-card @(Executable.Installing ? "active" : "")">
    @if (Executable != null)
    {
        <div class="giz-active-app-card__image">
            <img src="@Executable.Image" alt="loading" />
        </div>
        <div class="giz-active-app-card__info">
            <div class="giz-active-app-card__info__category">Gaming</div>
            <div class="giz-active-app-card__info__title">@Executable.Name</div>
        </div>
        <div class="giz-active-app-card__actions">
            <ComboButton />
        </div>
    }
</div>