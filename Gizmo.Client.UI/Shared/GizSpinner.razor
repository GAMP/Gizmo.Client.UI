@namespace Gizmo.Client.UI.Shared
<!--animate spinner-->
    <div class="giz-animate-spinner">
        <!--svg-->
        <svg class="giz-spinner" aria-labelledby="title" viewBox="-10 -10 220 220" height="52" width="52">
            <defs>
                <linearGradient id="spinner-color-1" gradientUnits="objectBoundingBox" x1="0" y1="0" x2="1" y2="1">
                    <stop offset="0%" stop-color="#7B869D" stop-opacity="0"></stop>
                    <stop offset="100%" stop-color="#7B869D" stop-opacity=".2"></stop>
                </linearGradient>
                <linearGradient id="spinner-color-2" gradientUnits="objectBoundingBox" x1="0" y1="0" x2="0" y2="1">
                    <stop offset="0%" stop-color="#7B869D" stop-opacity=".2"></stop>
                    <stop offset="100%" stop-color="#7B869D" stop-opacity=".4"></stop>
                </linearGradient>
                <linearGradient id="spinner-color-3" gradientUnits="objectBoundingBox" x1="1" y1="0" x2="0" y2="1">
                    <stop offset="0%" stop-color="#7B869D" stop-opacity=".4"></stop>
                    <stop offset="100%" stop-color="#7B869D" stop-opacity=".6"></stop>
                </linearGradient>
                <linearGradient id="spinner-color-4" gradientUnits="objectBoundingBox" x1="1" y1="1" x2="0" y2="0">
                    <stop offset="0%" stop-color="#7B869D" stop-opacity=".6"></stop>
                    <stop offset="100%" stop-color="#7B869D" stop-opacity=".8"></stop>
                </linearGradient>
                <linearGradient id="spinner-color-5" gradientUnits="objectBoundingBox" x1="0" y1="1" x2="0" y2="0">
                    <stop offset="0%" stop-color="#7B869D" stop-opacity=".8"></stop>
                    <stop offset="100%" stop-color="#7B869D" stop-opacity="1"></stop>
                </linearGradient>
                <linearGradient id="spinner-color-6" gradientUnits="objectBoundingBox" x1="0" y1="1" x2="1" y2="0">
                    <stop offset="0%" stop-color="#7B869D" stop-opacity="1"></stop>
                    <stop offset="100%" stop-color="#7B869D" stop-opacity="1"></stop>
                </linearGradient>
            </defs>
            <g fill="none" stroke-width="20" transform="translate(100,100)">
                <path d="M 0,-100 A 100,100 0 0,1 86.6,-50" stroke="url(#spinner-color-1)"></path>
                <path d="M 86.6,-50 A 100,100 0 0,1 86.6,50" stroke="url(#spinner-color-2)"></path>
                <path d="M 86.6,50 A 100,100 0 0,1 0,100" stroke="url(#spinner-color-3)"></path>
                <path d="M 0,100 A 100,100 0 0,1 -86.6,50" stroke="url(#spinner-color-4)"></path>
                <path d="M -86.6,50 A 100,100 0 0,1 -86.6,-50" stroke="url(#spinner-color-5)"></path>
                <path d="M -86.6,-50 A 100,100 0 0,1 0,-100" stroke="url(#spinner-color-6)"></path>
            </g>
        </svg>
        <!--/svg-->
    </div>
    <!--/animate spinner-->