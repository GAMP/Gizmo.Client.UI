@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="application-card">
    <div class="giz-hoverable-card">
        <div class="hoverable-content">
            <!--img-->
            <div class="giz-img-top">
                <img src="_content/Gizmo.Client.UI/img/@Application.Image" alt='loading' />
            </div>
            <!--/img-->
        </div>
        <div class="hovered-content-wrapper">
            <div class="hovered-content" @onclick="() => OpenDetails()">
                <div class="d-flex">
                    <!--store-->
                    <Tooltip Text="Including Store Account">
                        <IconButton SVGIcon="Icons.StoreApp_Client" Variant="ButtonVariants.Text" Size="ButtonSizes.Small" Class="store-btn" />
                    </Tooltip>
                    <!--/store-->
                    <!--heart-->
                    <IconButton SVGIcon="Icons.Heart_Client" Variant="ButtonVariants.Text" Size="ButtonSizes.Small" Class="ml-auto" />
                    <!--/heart-->
                </div>
                <div>
                    <!--button-->
                    <Button Size="ButtonSizes.Large" HasShadow="true" IsFullWidth="true" Class="card-primary-button" @onclick="@(() => Execute())">LAUNCH</Button>
                    <!--/button-->
                </div>
                <div>
                    <!--offer-->
                    <div class="d-flex">
                        <div class="application-card-text">
                            <span class="giz-playing-indicator"></span>
                            Now Playing
                        </div>
                        <div class="application-card-count ml-auto">@Application?.NowPlaying</div>
                    </div>
                    <!--offer score-->
                </div>
            </div>
        </div>
    </div>
    <div class="application-card-footer">
        <!--card title-->
        <div class="application-card-title mt-4 mb-2">
            @Application?.Name
        </div>
        <!--/card title-->
        <div class="application-card-text">
            @if (ShowDateAdded)
            {
                <div>
                    Add date <span>@Application?.DateAdded.ToShortDateString()</span>
                </div>
            }
            else
            {
                <div class="d-flex align-center">
                    @if (Application != null)
                    {
                        <Rating @bind-Value="Application.Rate" />
                    }
                    else
                    {
                        <Rating Value="0" IsReadOnly="true" />
                    }
                    <span class="application-card-rating">@(Application?.Ratings ?? 0) Ratings</span>
                </div>
            }
        </div>
    </div>
    <AlertDialog Message="winexe002piw974muaf65_ss8d6.bat was terminated unexpectedly." AlertType="AlertDialog.AlertTypes.Warning" @bind-IsOpen="_warningDialogIsOpen" />
</div>
