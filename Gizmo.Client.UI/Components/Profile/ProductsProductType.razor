@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase

<div class="giz-user-time-products-type @(TimeProduct.ActivationOrder.HasValue ? (TimeProduct.InCredit ? "giz-user-time-products-type--credit" : "") : "giz-user-time-products-type--disabled")">
    <div class="giz-user-time-products-type__content">
        @switch (TimeProduct.TimeProductType)
        {
            case UsageType.TimeFixed:

                <Icon SVGIcon="Icons.TimeFixed_Client" />

                break;

            case UsageType.Rate:

                <Icon SVGIcon="Icons.TimeSession2_Client" />

                break;

            case UsageType.TimeOffer:

                <Icon SVGIcon="Icons.TimeOffer_Client" />

                break;
        }
        <div class="giz-user-time-products-type__description">@TimeProduct.TimeProductName</div>
    </div>
</div>