@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase

@if (ProductItemViewState is not null)
{
    @if (ProductItemViewState.Quantity == 0)
    {
        <Button Color="ButtonColors.Accent" Class="giz-product-card-primary-button" Size="ButtonSizes.Medium" IsFullWidth="true" @onclick="OnAddQuantityButtonClickHandlerAsync" Text="@LocalizationService.GetString("GIZ_SHOP_ADD_TO_CART")" />
    }
    else
    {
        <QuantityPicker Size="@PikerSize" Quantity="@ProductItemViewState.Quantity" OnAddQuantityButtonClick="OnAddQuantityButtonClickHandlerAsync" OnRemoveQuantityButtonClick="OnRemoveQuantityButtonClickHandler" OnClick="@((args) => OnClick.InvokeAsync(args))" />
    }
}