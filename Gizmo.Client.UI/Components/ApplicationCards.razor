@namespace Gizmo.Client.UI.Components
@using Microsoft.AspNetCore.Components.Web.Virtualization
@inherits CustomDOMComponentBase

<Virtualize Items="Applications.Chunk(8).ToArray()" Context="chunkedApps">
    <div class="virtual-chunk-grid">
        @for (int i = 0; i < chunkedApps.Length; i++)
        {
            <ApplicationCard @key="chunkedApps[i].ApplicationId" Application="chunkedApps[i]" OnOpenExecutableSelector="OpenExecutableSelector" />
        }
    </div>
</Virtualize>