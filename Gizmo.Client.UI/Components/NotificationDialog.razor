@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="giz-order-modal">
    <div class="giz-order-modal--content">
        <div class="giz-order-modal--header">
            <div class="giz-heading-text">
                heads up
            </div>
            <IconButton SVGIcon="Icons.Close" Variant="ButtonVariants.Text" Size="ButtonSizes.Small" Class="close-btn" @onclick="@(() => CloseDialog())" />
        </div>
        <div class="giz-order-modal--title">
            @Notification?.Title
        </div>
        <div class="giz-order-modal--text">
            @Notification?.Message
        </div>
    </div>
</div>
