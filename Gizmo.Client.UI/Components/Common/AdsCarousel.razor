@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase

<div class="giz-ads-carousel">
    <CascadingValue Value="@this" IsFixed="true">
        <div class="giz-ads-carousel__body">

            @foreach (var item in AdvertisementsService.ViewState.Advertisements)
            {
                <AdsCarouselItem AdvertisementId="@item.Id" @key="item.Id" />
            }

            @if (AdvertisementsService.ViewState.AdvertisementsCount > 2)
            {
                @foreach (var item in AdvertisementsService.ViewState.Advertisements)
                {
                    <AdsCarouselItem AdvertisementId="@item.Id" Duplicate="true" />
                }
            }

        </div>
        <div class="giz-ads-carousel__navigation">
            <div class="giz-ads-carousel__navigation__indicators">
                <AdsCarouselIndicator Maximum="5" Size="@(AdvertisementsService.ViewState.AdvertisementsCount)" SelectedIndex="@SelectedIndex" SelectedIndexChanged="SelectedIndexChangedHandler" />
            </div>
        </div>
    </CascadingValue>
</div>