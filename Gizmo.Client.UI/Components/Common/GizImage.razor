@namespace Gizmo.Client.UI.Components
@inherits ComponentBase

@switch (_imageResultStatusCode)
{
    case 0:
    {
        if (LoadingPlaceholder is not null)
        {
            @LoadingPlaceholder
        }
        else
        {
            <Spinner Class="giz-image__spinner" />
        }

        break;
    }
    case 1:
    {
        if (EmptyResultPlaceholder is not null)
        {
            @EmptyResultPlaceholder
        }
        else
        {
            <span style="display:flex;justify-content:center">
                Image is empty.
            </span>
        }
        
        break;
    }
    case 2:
    {
        if (ErrorPlaceholder is not null)
        {
            @ErrorPlaceholder
        }
        else
        {
            <span style="display:flex;justify-content:center">
                Image loading error.
            </span>
        }

        break;
    }
    case 3:
    {
        <img src="@_imageHash" class="@ImageClassName" loading="lazy" alt="image" />
        break;
    }
}

