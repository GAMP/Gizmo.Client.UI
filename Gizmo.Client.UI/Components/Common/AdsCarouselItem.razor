@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components
@using Gizmo.UI.Services

@inject ILocalizationService localizationService

<div class="@Class @ClassName"
     @onclick="OnClickHandler">
    <div class="giz-ads-carousel-item__image">
        <img src="_content/Gizmo.Client.UI/img/@Advertisement.ThumbnailUrl" alt='loading' />
    </div>
    <div class="giz-ads-carousel-item__content">
        <div class="giz-ads-carousel-item__content__body">
            @((MarkupString)@Advertisement.Body)
        </div>
        <div class="giz-ads-carousel-item__content__actions">
            <Button Size="ButtonSizes.Large" Text="@localizationService.GetString("GIZ_GEN_VIEW_DETAILS")" />
        </div>
    </div>
</div>