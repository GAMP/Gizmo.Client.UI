@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="giz-card-wrapper">
    <Menu CloseOnItemClick="false" OpenDirection="PopupOpenDirections.Cursor" Style="width: 100%;">
        <Activator>
            <div class="giz-card active">
                <div class="giz-card--body">
                    <div class="giz-card-title">All</div>
                    <div class="giz-card-text">
                        @ApplicationFilter?.Name
                    </div>
                </div>
            </div>
        </Activator>
        <ChildContent>
            @if (ApplicationFilter != null)
            {
                @foreach (var option in ApplicationFilter.Options)
                {
                    <ListItem>
                        <div class="d-flex align-center">
                            <CheckBox @bind-IsChecked="option.IsSelected"></CheckBox>
                            @option.Name
                        </div>
                    </ListItem>
                }
                <Divider />
                <div class="d-flex pa-3">
                    <Button Size="ButtonSizes.Large" Color="ButtonColors.Info" IsFullWidth="true">Clear</Button>
                </div>
            }
        </ChildContent>
    </Menu>
</div>