@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<SimpleDialog @bind-IsOpen="IsOpen" IsModal="true" MaximumWidth="600px" MaximumHeight="600px">
    <div class="giz-client-dialog">
        <div class="giz-client-dialog__header">
            <div class="giz-client-dialog__header__title">Select application version</div>
            <div class="giz-client-dialog__header__subtitle">@ExecutableSelectorService.ViewState.Application?.Title</div>
            <IconButton SVGIcon="Icons.Close" Variant="ButtonVariants.Text" Size="ButtonSizes.Small" Class="close-btn" @onclick="() => CloseDialog()" />
        </div>
        <div class="giz-client-dialog__body">
            <div class="giz-executable-list">
                
                @if (ExecutableSelectorService.ViewState.Application != null && ExecutableSelectorService.ViewState.Application.Executables != null)
                {
                    @foreach (var executable in ExecutableSelectorService.ViewState.Application.Executables)
                    {
                        <ExecutableCard Executable="@executable" />
                    }
                }

            </div>
        </div>
    </div>
</SimpleDialog>
