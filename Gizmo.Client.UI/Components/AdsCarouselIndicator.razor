@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="giz-ads-carousel-indicator">
    @for (int i = 0; i < Size; i++)
    {
        var local_i = i;
        <div class="giz-ads-carousel-indicator-button @(local_i == SelectedIndex ? "active": "")" @onclick="@(() => OnClickButton(local_i))"></div>
    }
</div>