@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components
@using Gizmo.Client.UI.Components
@using Gizmo.Client.UI.ViewModels

<GizNavigation Title="Daily News" OnClickPreviousButton="@OnClickPreviousButtonHandler" OnClickNextButton="@OnClickNextButtonHandler" />

@if (NewsFeeds != null)
{
    <GizIndicator Size="NewsFeeds.Count" SelectedIndex="@_currentPage" SelectedIndexChanged="SelectedIndexChangedHandler"></GizIndicator>

    if (NewsFeeds[_currentPage].Type == Enumerations.NewsFeedType.Media)
    {
        var mediaFeed = (MediaFeed)NewsFeeds[_currentPage];
        <MediaFeedItemCard MediaFeed="@mediaFeed" />
    }
    else
    {
        var rssFeed = (RssFeed)NewsFeeds[_currentPage];
        @foreach (var rssFeedItem in rssFeed.Items)
        {
            <RssFeedItemCard RssFeedItem="@rssFeedItem" />
        }
    }
}
