@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase
@using Gizmo.Web.Components

<div class="giz-news-feed-rss-item-card giz-news-feed-rss-item-card--active">
    <Card>
        <CardBody>
            <div class="giz-news-feed-rss-item-card__body">
                <div class="giz-news-feed-rss-item-card__body__title">
                    @RssFeedItem?.Source
                </div>
                <div class="giz-news-feed-rss-item-card__body__text">
                    @RssFeedItem?.Title
                </div>
                <div class="giz-news-feed-rss-item-card__body__details">
                    @RssFeedItem?.Description
                </div>
            </div>
        </CardBody>
    </Card>
</div>
