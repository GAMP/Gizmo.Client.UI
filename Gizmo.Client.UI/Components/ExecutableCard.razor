@namespace Gizmo.Client.UI.Components
@inherits CustomDOMComponentBase

<div class="giz-executable-card">
    <div class="giz-executable-card__executable-image">
        
        <GizImage ImageType="Gizmo.UI.ImageType.Executable" ImageId="@Executable.ImageId">
            <EmptyResultPlaceholder>
                <div class="giz-default-image">
                    <img src="_content/Gizmo.Client.UI/img/no-exe-image.svg" alt='loading' />
                </div>
            </EmptyResultPlaceholder>
        </GizImage>
        
        @*<div class="giz-executable-card__executable-status">
            <i class="giz-executable-card__executable-status__bullet"></i>24
        </div>*@
    </div>
        
    <div class="giz-executable-card__executable-title">
        @Executable.Caption
    </div>

    <div class="giz-executable-card__executable-actions">
        <ExecutableLaunchButton @key="Executable.ExecutableId" ExecutableId="@Executable.ExecutableId" Size="ButtonSizes.Large" IsFullWidth="true" />
    </div>
</div>