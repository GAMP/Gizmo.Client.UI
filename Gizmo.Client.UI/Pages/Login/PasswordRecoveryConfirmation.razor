@namespace Gizmo.Client.UI.Pages
@inherits ComponentBase
@layout _Layout_Login
@using System.Threading;
@using Gizmo.Web.Components
@using Gizmo.Client.UI.Components
@using Microsoft.AspNetCore.Components.Forms

<LoginCard>
    <CardHeader>
        <div class="giz-login-new-user">Not a member? <a href="/registration">Sign up now</a></div>
    </CardHeader>
    <CardBody>
        <EditForm EditContext="@UserPasswordRecoveryConfirmationService.EditContext">
            <div class="giz-login-title">Forgot Password</div>
            <div class="giz-login-subtitle">Please enter the code from the text message we sent to +...</div>
            <div class="giz-login-input">
                <TextInput @bind-Value="UserPasswordRecoveryConfirmationService.ViewState.ConfirmationCode" IsTransparent="true" Size="InputSizes.Large" IsFullWidth="true" Label="Enter your code"/>
            </div>
            <div class="giz-login-input">
                <Button Color="ButtonColors.Accent" Size="ButtonSizes.ExtraLarge" IsFullWidth="true" @onclick="@UserPasswordRecoveryConfirmationService.SubmitAsync">Confirm</Button>
            </div>
        </EditForm>
    </CardBody>
    <CardFooter>
        <KeyboardLanguage />
    </CardFooter>
</LoginCard>
