@namespace Gizmo.Client.UI.Pages
@inherits ComponentBase
@layout _Layout_Login
@using System.Threading;
@using Gizmo.Web.Components
@using Gizmo.Client.UI.Components
@using Microsoft.AspNetCore.Components.Forms

<LoginCard>
    <CardHeader>
        <div class="giz-login-new-user">Not a member? <a href="/registration">Sign up now</a></div>
    </CardHeader>
    <CardBody>
        <EditForm EditContext="@UserPasswordRecoverySetNewPasswordService.EditContext">
            <div class="giz-login-title">Forgot Password</div>
            <div class="giz-login-subtitle">Great! Now come up with a new password and you're all set</div>
            <div class="giz-login-input">
                <TextInput @bind-Value="UserPasswordRecoverySetNewPasswordService.ViewState.NewPassword" Size="InputSizes.Large" IsFullWidth="true" Label="Enter new password"/>
            </div>
            <div class="giz-login-input">
                <TextInput @bind-Value="UserPasswordRecoverySetNewPasswordService.ViewState.RepeatPassword" Size="InputSizes.Large" IsFullWidth="true" Label="Repeat new password"/>
            </div>
            <div class="giz-login-input">
                <Button Color="ButtonColors.Accent" Size="ButtonSizes.ExtraLarge" IsFullWidth="true" @onclick="@UserPasswordRecoverySetNewPasswordService.SubmitAsync">Reset password</Button>
            </div>
        </EditForm>
    </CardBody>
    <CardFooter>
        <KeyboardLanguage />
    </CardFooter>
</LoginCard>
