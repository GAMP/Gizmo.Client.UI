@namespace Gizmo.Client.UI.Pages
@inherits ComponentBase
@layout _Layout_Login
@using System.Threading;
@using Gizmo.Web.Components

@if (_logginIn)
{
    <div class="giz-login-status">
        <GizSpinner />
        <div class="giz-animate-spinner--title mt-10 mb-2">please wait</div>
        <div class="giz-animate-spinner--text">Loggin in now</div>
    </div>
}
else
{
    <div class="giz-login-options">
        <!--login-heading-->
        <div class="giz-login-content--heading pt-8">
            <!--cancel button-->
            <button class="client-button giz-terminate giz-float-right">
                <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.89545 5L9.73835 2.1571C10.0872 1.80824 10.0872 1.24261 9.73835 0.893466L9.10653 0.261648C8.75767 -0.0872159 8.19205 -0.0872159 7.8429 0.261648L5 3.10455L2.1571 0.261648C1.80824 -0.0872159 1.24261 -0.0872159 0.893466 0.261648L0.261648 0.893466C-0.0872159 1.24233 -0.0872159 1.80795 0.261648 2.1571L3.10455 5L0.261648 7.8429C-0.0872159 8.19176 -0.0872159 8.75739 0.261648 9.10653L0.893466 9.73835C1.24233 10.0872 1.80824 10.0872 2.1571 9.73835L5 6.89545L7.8429 9.73835C8.19176 10.0872 8.75767 10.0872 9.10653 9.73835L9.73835 9.10653C10.0872 8.75767 10.0872 8.19205 9.73835 7.8429L6.89545 5Z" fill="#DAEDF8" fill-opacity="0.74" style="mix-blend-mode:screen" />
                </svg>
            </button>
            <!--/cancel button-->
            <div class="giz-language-menu">
                <button class="client-button giz-transparent" type="button">
                    <!--svg-->
                    <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <circle cx="7.5" cy="7.5" r="7.5" fill="url(#pattern0)" />
                        <defs>
                            <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                                <use xlink:href="#image0" transform="translate(-0.333333) scale(0.00653595)" />
                            </pattern>
                            <image id="image0" width="255" height="153" xlink:href="data:image/png;base64," />
                        </defs>
                    </svg>
                    <!--/svg-->
                    <span>EN</span>
                    <!--svg-->
                    <svg width="7" height="5" viewBox="0 0 7 5" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.33097 0.78815L6.03906 1.49624L3.0259 4.5094L0.0127468 1.49624L0.720839 0.78815L3.0259 3.08819L5.33097 0.78815Z" fill="white" />
                    </svg>
                    <!--/svg-->
                </button>
            </div>
        </div>
        <!--login heading-->
        <!--login content body-->
        <div class="giz-login-content--body px-10 pb-12">
            <div class="giz-login-content--title">welcome to inspot</div>
            <div class="giz-login-content--text">Sign in to your account</div>
            <form>
                <div class="mb-3">
                    <TextInput TValue="string" Size="InputSizes.Large" IsFullWidth="true" Placeholder="Username" />
                </div>
                <div class="mb-3">
                    <TextInput TValue="string" Size="InputSizes.Large" IsFullWidth="true" Type="password" Placeholder="Password" />
                </div>
                <!--login btn-->
                <div class="giz-btn mb-6">
                    <Button Size="ButtonSizes.ExtraLarge" IsFullWidth="true" @onclick=@Navigate>
                        <!--svg-->
                        <svg class="mr-2" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12.8977 7.28809H3.082C2.30756 7.28809 1.67975 7.91589 1.67975 8.69034V13.5982C1.67975 14.3727 2.30756 15.0005 3.082 15.0005H12.8977C13.6722 15.0005 14.3 14.3727 14.3 13.5982V8.69034C14.3 7.91589 13.6722 7.28809 12.8977 7.28809Z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M4.48425 7.28766V4.48316C4.48425 3.55341 4.85359 2.66175 5.51103 2.00431C6.16846 1.34688 7.06013 0.977539 7.98988 0.977539C8.91963 0.977539 9.8113 1.34688 10.4687 2.00431C11.1262 2.66175 11.4955 3.55341 11.4955 4.48316V7.28766" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <!--/svg-->
                        continue
                    </Button>
                </div>
            </form>
            <!--/login btn-->
            <!--third party login-->
            <div class="giz-third-parties-login">
                <div class="giz-third-parties-login--text mb-4">or connect via your social network account</div>
                <!--social icons-->
                <div>
                    <IconButton SVGIcon="Icons.Facebook_Client" Variant="ButtonVariants.Outline" />
                    <IconButton SVGIcon="Icons.Google_Client" Variant="ButtonVariants.Outline" Class="mx-3" />
                    <IconButton SVGIcon="Icons.Twitter_Client" Variant="ButtonVariants.Outline" />
                </div>
                <!--/social icons-->
            </div>
            <!--/third party login-->
            <div class="giz-login-content--footer">
                <div class="giz-no-account">don’t have an account?</div>
                <div class="giz-footer-links"><a href="/createaccount" class="giz-white-text">create new account</a> | <a href="/resetpassword" class="giz-white-text">forgot password?</a></div>
            </div>
        </div>
        <!--login content body-->
    </div>
}