@inherits ComponentBase
@using Gizmo.Web.Components
@using Gizmo.Client.UI.Components
@using Gizmo.Client.UI.ViewModels

<div class="giz-home">
    <div class="giz-home__header">
        <div class="giz-home__header__quick-launch">
            <QuickLauncher />
        </div>
        <div class="giz-home__header__ads">
            Ads
        </div>
    </div>
    <div class="giz-home__body">
        <div class="giz-home__body__ads">
            <AdsCarousel Size="3" />
        </div>
        <div class="giz-home__body__popular">
            <div class="giz-section">
                <div class="giz-section__header">
                    Popular items
                </div>
                <div class="giz-section__body">
                    <div class="giz-home__app-wrapper">
                        @foreach (var app in NewApplications)
                        {
                            <ApplicationCard Application="@app" ShowDateAdded="true" OnOpenDetails="@OpenDetails" OnOpenExecutableSelector="@OpenExecutableSelector"></ApplicationCard>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
