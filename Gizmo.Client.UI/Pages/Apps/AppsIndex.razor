@namespace Gizmo.Client.UI.Pages
@inherits ComponentBase
@using Gizmo.Web.Components
@using Gizmo.Client.UI.Components
@using Gizmo.Client.UI.ViewModels

<div class="giz-apps">
    <div class="giz-apps__header">
        <div class="giz-apps__header__quick-launch">
            <QuickLauncher />
        </div>
        <div class="giz-apps__header__ads">
            Ads
        </div>
    </div>
    <div class="giz-apps__body giz-scrollbar--v">
        <div class="giz-apps__body__ads">
            <ExpansionPanel>
                <Header>
                    Ads
                </Header>
                <ChildContent>
                    <AdsCarousel Advertisements="@AdvertisementsService.ViewState.Advertisements" />
                </ChildContent>
            </ExpansionPanel>
        </div>
        <div class="giz-apps__body__popular">
            <div class="giz-section">
                <div class="giz-section__header">
                    <div>Popular items</div>
                    <div class="giz-apps-filters">
                        <Select @bind-Value="_selectedApplicationGroupId" Label="Category:" OpenDirection="PopupOpenDirections.Bottom" MaximumHeight="200px">
                            @foreach (var appGroup in ApplicationsPageService.ViewState.Applications)
                            {
                                <SelectItem TValue="int?" Value="@appGroup.Id" Text="@appGroup.Title" />
                            }
                        </Select>
                    </div>
                </div>
                <div class="giz-section__body">
                    <div class="giz-apps__app-wrapper">
                        @foreach (var app in ApplicationsPageService.ViewState.Applications)
                        {
                            <ApplicationCard Application="@app" ShowDateAdded="true" OnOpenExecutableSelector="@OpenExecutableSelector"></ApplicationCard>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<ExecutableSelectorDialog @bind-IsOpen="ExecutableSelectorIsOpen" />