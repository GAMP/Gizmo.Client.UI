@inherits ComponentBase
@layout _EmptyLayout

<div client-theme="true" class="giz-not-found-wrapper">
    <div class="giz-not-found-background">
        <img src="_content/Gizmo.Client.UI/img/not-found-background.png" alt="loading" />
    </div>
    <div class="giz-not-found">
        <div class="giz-not-found__header">404</div>
        <div class="giz-not-found__title">Page Not Found</div>
        <div class="giz-not-found__message">
            This page doesn’t exist or was removed!
            <br />
            We suggest you back to home.
            <br />
            @NavigationService.GetUri()
        </div>
        <div class="giz-not-found__action"><Button Color="ButtonColors.Accent" Size="ButtonSizes.ExtraLarge" Text="Go Home" @onclick="GoHome" /></div>
    </div>
</div>