@namespace Gizmo.Client.UI.Pages
@inherits CustomDOMComponentBase
@using Gizmo.Client.UI.View.States

<div class="giz-user-time-products-properties-header-tooltip-wrapper"
     id="@Id"
     @ref="@Ref">
    <div class="giz-user-time-products-properties-header-tooltip">
        <div class="giz-user-time-products-properties-header-tooltip-close-btn">
            <IconButton SVGIcon="Icons.Close_Client" Variant="ButtonVariants.Text" Size="ButtonSizes.Small" Class="close-btn" @onclick="Close" />
        </div>

        <div class="giz-user-time-products-properties-header-tooltip-item">
            <div class="giz-user-time-products-properties-header-tooltip-item__icon">
                <Icon SVGIcon="Icons.ExpirationFromUse_Client" />
            </div>
            <div class="giz-user-time-products-properties-header-tooltip-item__description">
                @LocalizationService.GetString("GIZ_USER_TIME_PRODUCTS_PROPERTIES_EXPIRES_AFTER_FIRST_USE_DESCRIPTION")
            </div>
        </div>

        <div class="giz-user-time-products-properties-header-tooltip-item">
            <div class="giz-user-time-products-properties-header-tooltip-item__icon">
                <Icon SVGIcon="Icons.ExpirationFromPurchase_Client" />
            </div>
            <div class="giz-user-time-products-properties-header-tooltip-item__description">
                @LocalizationService.GetString("GIZ_USER_TIME_PRODUCTS_PROPERTIES_EXPIRES_AFTER_PURCHASE_DESCRIPTION")
            </div>
        </div>

        <div class="giz-user-time-products-properties-header-tooltip-item">
            <div class="giz-user-time-products-properties-header-tooltip-item__icon">
                <Icon SVGIcon="Icons.ExpirationAtLogout_Client" />
            </div>
            <div class="giz-user-time-products-properties-header-tooltip-item__description">
                @LocalizationService.GetString("GIZ_USER_TIME_PRODUCTS_PROPERTIES_EXPIRES_AFTER_LOGOUT_DESCRIPTION")
            </div>
        </div>

        <div class="giz-user-time-products-properties-header-tooltip-indicator">
            <div class="giz-user-time-products-properties-header-tooltip-indicator__active"></div>
            <div class="giz-user-time-products-properties-header-tooltip-indicator__description">
                @LocalizationService.GetString("GIZ_USER_TIME_PRODUCTS_PROPERTIES_EXPIRES_EXPIRATION_COUNTDOWN_STARTED_DESCRIPTION")
            </div>
        </div>
    </div>
</div>