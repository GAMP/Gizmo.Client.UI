    "MaxPopularProducts": 16,
    "MaxPopularApplications": 16,
    "MaxQuickLaunchExecutables": 10,
    "HomePageMaxItemsPerRow": 8,
    "AppsPageMaxItemsPerRow": 8,
    "ProductsPageMaxItemsPerRow": 6
  },
  "HostQRCodeOptions": {
    "Enabled": true
  },
  "UserLoginOptions": {
    "Enabled": true
